							var useramount = doc.data().amount
							if (useramount < 15000) {
								console.log("please add money")
								setTimeout(() => {
									resolve(0)
								})
							} else {
								resolve(1)
							}
						} else {
							console.log("please add money")
							setTimeout(() => {
								resolve(0)
							})
						}
					})
				})
				var walletamount = await myWallet()
				var certificatesamount = 60
				var checkwallet = await checkWallet(walletamount, certificatesamount)
				if (checkwallet == 1) {
					var businessurl = await generateImageUrl("Fire", "business", name, business)

					var buldingurl = await generateImageUrl("Fire", "bulding", name, bulding)


					var rentalurl = await generateImageUrl("Fire", "rental", name, rental)

					if (others != undefined) {
						var othersurl = await generateImageUrl("Fire", "other", name, others)

					} else {
						othersurl = "none"
					}
					var myinfos = await myinfo()
					var newcertificate = await {
						name: name,
						email: email,
						number: number,
						certificateid: Date.now().toString(),
						appliedname: myinfos.name,
						appliedemail: myinfos.email,
						appliedeno: myinfos.number,
						certificatename: "Fire Certificate",
						certificates: `[{"business":"${businessurl}"},{"bulding":"${buldingurl}"},{"rental":"${rentalurl}"},{"others":"${othersurl}"}]`,
						userid: localStorage.getItem("userid")
					}
					var Fire = await axios.post("https://api.smartwayonline.in/certificate/Fire", newcertificate).then((res) => { return res }).catch((err) => { if (err) return false })
					if (Fire.data == true) {
