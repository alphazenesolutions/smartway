			var walletprice = await walletamount
			var name = document.getElementById("name").value
			var number = document.getElementById("number").value
			var email = document.getElementById("email").value
			var photo = document.getElementById("photo").files[0]
			var aadhar = document.getElementById("aadhar").files[0]
			var sign = document.getElementById("sign").files[0]
			var smart = document.getElementById("smart").files[0]
			var community = document.getElementById("community").files[0]
			var customer = document.getElementById("customer").files[0]
			var others = document.getElementById("others").files[0]
			var photourl, aadharurl, signurl,
				smarturl, communityurl, customerurl, othersurl
			var userid = email
			var emailreg = /^[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)*$/
			if (name == "") {
				document.getElementById("fbname").style.display = "block"
				return false
			} else if (number == "") {
				document.getElementById("fbnumber").style.display = "block"
