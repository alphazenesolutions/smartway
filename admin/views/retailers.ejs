	async function userreg() {
		const userreg = await axios.get(`https://api.smartwayonline.in/user`).then((res) => { return res.data }).catch((error) => { return false })
		userreg.forEach((user) => {
			document.getElementById("Regdata").innerHTML += `
            <tr class='Regdata'>
